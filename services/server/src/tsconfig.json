{
  "compilerOptions": {
    "outDir": "/var/www",
    "target": "esnext",
    "noEmit": true,
    "module": "NodeNext",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "strict": false,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["node" ]
  },
    "watchOptions": {
    "watchFile": "fixedpollinginterval"
  },
    "include": ["*.ts"]
}

