{
  "compilerOptions": {
    "target": "es2024",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "resolveJsonModule": true,
    "outDir": "/var/www",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "watchOptions": {
    "watchFile": "fixedpollinginterval"
  },
  "include": ["*.ts"]
}
